<% if current_user.errors.empty? %>
  AlertMessage.show({
    type: 'success',
    text: '<%= j t('update_success') %>',
    timeout: 3000
  });
<% else %>
  <% current_user.errors.full_messages.each do |message| %>
    AlertMessage.show({ type: 'error', text: "<%= j message %>" });
  <% end %>
<% end %>
